generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DB_URL")
}

model Cart {
  id     Int     @id @default(autoincrement())
  price  Decimal @db.Decimal(15, 2)
  status String  @db.VarChar(50)

  // 1:1 back-reference (one cart belongs to one user)
  user    User?
  Product Product[]
}

model User {
  id         Int    @id @default(autoincrement())
  lastName   String @db.VarChar(50)
  firstName  String @db.VarChar(50)
  address    String @db.VarChar(50)
  postalCode String @db.VarChar(10) // better than INT
  city       String @db.VarChar(50)
  phone      String @db.VarChar(20) // better than INT
  password   String @db.VarChar(50)
  role       String @db.VarChar(50)

  // 1:1 relation to Cart â€” one cart per user
  cartId Int  @unique
  cart   Cart @relation(fields: [cartId], references: [id])

  orders        Order[]
  subscriptions Subscription[]
}

model Order {
  id        Int      @id @default(autoincrement())
  orderDate DateTime @db.Date
  price     Decimal  @db.Decimal(15, 2)
  status    String   @db.VarChar(50)

  userId Int
  user   User @relation(fields: [userId], references: [id])

  products Product[]
}

model Subscription {
  id           Int      @id @default(autoincrement())
  productApiId String   @db.VarChar(50)
  quantity     Int
  frequency    String   @db.VarChar(50)
  nextDate     DateTime @db.Date
  status       String   @db.VarChar(50)

  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model Product {
  apiId    String @id @db.VarChar(50)
  quantity Int

  cartId  Int
  orderId Int

  cart  Cart  @relation(fields: [cartId], references: [id])
  order Order @relation(fields: [orderId], references: [id])
}
